{
    "name": "vscode-arcadia",
    "displayName": "vscode-arcadia",
    "description": "",
    "version": "0.0.1",
    "publisher": "worrel",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:clojure",
        "onCommand:arcadia.replStart"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [{
            "command": "arcadia.replStart",
            "title": "Arcadia: REPL - Start"
        },{
            "command": "arcadia.replSendLine",
            "title": "Arcadia: REPL - Send Line"
        },{
            "command": "arcadia.replSendSelection",
            "title": "Arcadia: REPL - Send Selection"
        },{
            "command": "arcadia.replSendFile",
            "title": "Arcadia: REPL - Send File"
        },{
            "command": "arcadia.replSendRegion",
            "title": "Arcadia: REPL - Send Region"
        }],
        "configuration": {
            "type": "object",
            "title": "Arcadia Configuration",
            "properties": {
                "arcadia.replHost": {
                    "type": "string",
                    "default": "::1",
                    "description": "REPL host"
                },
                "arcadia.replPort": {
                    "type": "number",
                    "default": 37220,
                    "description": "REPL port"
                }
            }
        },
        "keybindings": [{
            "command": "arcadia.replSendLine",
            "key": "ctrl+, l",
            "mac": "ctrl+, l"
        },{
            "command": "arcadia.replSendSelection",
            "key": "ctrl+, s",
            "mac": "ctrl+, s"
        },{
            "command": "arcadia.replSendFile",
            "key": "ctrl+, f",
            "mac": "ctrl+, f"
        },{
            "command": "arcadia.replSendRegion",
            "key": "ctrl+enter",
            "mac": "ctrl+enter"
        }],
	"menus": {
            "editor/context": [{
                "when": "editorLangId == clojure",
		"command": "arcadia.replSendFile",
		"group": "arcadia@1"
	    },{
                "when": "editorLangId == clojure",
		"command": "arcadia.replSendLine",
		"group": "arcadia@2"
	    },{
                "when": "editorLangId == clojure",
		"command": "arcadia.replSendRegion",
		"group": "arcadia@3"
	    },{
                "when": "editorLangId == clojure",
		"command": "arcadia.replSendSelection",
		"group": "arcadia@4"
	    }],
            "explorer/context": [{
                "when": "resourceLangId == clojure",
		"command": "arcadia.replSendFile",
		"group": "arcadia@1"
	    }]
	}
    },
    "scripts": {
        "preinstall": "lein cljsbuild once",
        "vscode:prepublish": "lein cljsbuild once",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "vscode": "^0.11.0"
    }
}
